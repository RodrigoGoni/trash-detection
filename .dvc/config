# DVC Configuration for Data and Model Versioning

# Initialize with: dvc init

# Remote storage configuration
[core]
    remote = myremote
    autostage = true

# Define remote storage (examples)
['remote "myremote"']
    url = s3://my-bucket/dvc-storage
    # url = gs://my-bucket/dvc-storage  # Google Cloud
    # url = /path/to/local/storage  # Local storage
    # url = ssh://user@example.com/path/to/storage  # SSH

# Cache settings
[cache]
    dir = .dvc/cache
    type = symlink

# State settings
[state]
    dir = .dvc/tmp
